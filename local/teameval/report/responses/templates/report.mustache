{{!
    @template teamevalreport_responses/report

    Starting point for an awesome template.

    Example context: {
        "questions" : [
            {
                "title" : "Question 1",
                "groups" : [
                    {
                        "marked": [
                            "Alice",
                            "Bob",
                            "Carol"
                        ],
                        "marks": [
                            {
                                "marker" : "Alice",
                                "scores" : [3, 2, 1]
                            },
                            {
                                "marker" : "Bob",
                                "scores" : [1, 3, 2]
                            },
                            {
                                "marker" : "Carol",
                                "scores" : [1, 2, 3]
                            },
                        ]
                    }
                ]
            }
        ]
    }

}}
<div class="teamevalreport-responses-container">
{{#questions}}
<h2>{{title}}</h2>
{{#groups}}
<table>
    <thead>
        <tr>
        <th>{{name}}</th>
        {{#marked}}
            <th>{{fullname}}</th>
        {{/marked}}
        </tr>
    </thead>
    <tbody>
        {{#marks}}
        <tr>
            <th scope="row">{{marker}}</th>
            {{#scores}}
            <td>{{.}}</td>
            {{/scores}}
        </tr>
        {{/marks}}
    </tbody>
</table>
{{/groups}}
{{/questions}}
</div>